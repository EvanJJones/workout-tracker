<form>
  <div class="row d-flex justify-content-center">
    <h2 id="alert">Enter your weightlifting info</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="Weight" id="weight">
    </div>
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="Reps" id="reps">
    </div>
    <div class="col-md-1">
      <button type="button" class="btn btn-primary" id="submit-weight">Submit</button>
    </div>
  </div>
  
</form>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Weight (lbs)</th>
      <th scope="col">Reps</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each weights}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.weight}}</td>
      <td>{{this.reps}}</td>
      <td>{{this.created}}</td>
    </tr>
    {{/each}}
    
  </tbody>
</table>